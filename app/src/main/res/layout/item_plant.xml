<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <!-- 카드 본체 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_plant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/card_background_light_green"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <!-- 왼쪽 열: 제목(가운데), 이미지, 예상 수명 -->
            <TextView
                android:id="@+id/tvPlantNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/ivPlantImage"
                app:layout_constraintEnd_toEndOf="@+id/ivPlantImage"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="우리집 몬스테라"/>

            <ImageView
                android:id="@+id/ivPlantImage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPlantNickname"
                app:layout_constraintBottom_toTopOf="@id/tv_lifespan"
                tools:src="@drawable/plant2"/>

            <TextView
                android:id="@+id/tv_lifespan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/ivPlantImage"
                app:layout_constraintTop_toBottomOf="@id/ivPlantImage"
                tools:text="예상 수명: 10년"/>

            <!-- 오른쪽 열: 물/살충제 정보 + 게이지 + 체크버튼 -->
            <TextView
                android:id="@+id/tvWaterInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="44dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/ivPlantImage"
                app:layout_constraintTop_toTopOf="@id/ivPlantImage"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="물: 2일 6시간 전"/>

            <ProgressBar
                android:id="@+id/pbWaterGauge"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="44dp"
                android:progressDrawable="@drawable/bg_progress_bar_water"
                app:layout_constraintStart_toStartOf="@id/tvWaterInfo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvWaterInfo"
                tools:progress="50"/>

            <ImageButton
                android:id="@+id/btnWaterCheck"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_check"
                app:tint="@color/nav_icon"
                app:layout_constraintTop_toTopOf="@id/tvWaterInfo"
                app:layout_constraintBottom_toBottomOf="@id/pbWaterGauge"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvPesticideInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="44dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/tvWaterInfo"
                app:layout_constraintTop_toBottomOf="@id/pbWaterGauge"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="살충제: 5일 전"/>

            <ProgressBar
                android:id="@+id/pbPesticideGauge"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="44dp"
                android:progressDrawable="@drawable/bg_progress_bar_pesticide"
                app:layout_constraintStart_toStartOf="@id/tvPesticideInfo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPesticideInfo"
                tools:progress="70"/>

            <ImageButton
                android:id="@+id/btnPesticideCheck"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_check"
                app:tint="@color/nav_icon"
                app:layout_constraintTop_toTopOf="@id/tvPesticideInfo"
                app:layout_constraintBottom_toBottomOf="@id/pbPesticideGauge"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 카드 아래에 붙는 소소한 팁 바 (카드 바깥) -->
    <LinearLayout
        android:id="@+id/layout_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:background="@drawable/bg_tip_bar"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/card_plant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="소소한 팁? 작은 물 온개 체크 용도 박스로도 사용가능"
            android:textColor="@android:color/black"
            android:textSize="12sp"/>

        <CheckBox
            android:id="@+id/cb_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:buttonTint="@android:color/darker_gray"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
