<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <!-- 식물 카드 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_plant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/card_background_light_green"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="8dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <!-- 왼쪽/오른쪽 영역을 나누는 가이드라인 (왼쪽 40%) -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.35" />

            <!-- 이름 : 이미지 위쪽에 배치 -->
            <TextView
                android:id="@+id/tv_plant_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/gl_left"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="우리집 몬스테라" />

            <!-- 이미지 : 이름 아래에 작게 -->

            <!-- 예상 수명 : 이미지 바로 아래에 -->

            <ImageView
                android:id="@+id/iv_plant_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_plant_nickname"
                tools:src="@drawable/plant2" />

            <LinearLayout
                android:id="@+id/ll_lifespan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/iv_plant_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/gl_left"
                app:layout_constraintHorizontal_bias="0.5">

                <TextView
                    android:id="@+id/tv_lifespan_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예상 수명:"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_lifespan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    tools:text="10년"/>
            </LinearLayout>

            <!-- 물 게이지 : 왼쪽은 가이드라인에 맞추고 오른쪽은 여백 주기 -->
            <TextView
                android:id="@+id/tv_water_gauge_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="물 게이지"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/gl_left"
                app:layout_constraintTop_toTopOf="@id/iv_plant_image" />

            <ProgressBar
                android:id="@+id/pb_water_gauge"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="198dp"
                android:layout_height="9dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:progressDrawable="@drawable/bg_progress_bar_water"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/gl_left"
                app:layout_constraintTop_toBottomOf="@id/tv_water_gauge_label"
                tools:progress="50" />

            <!-- 면역 게이지 -->

            <TextView
                android:id="@+id/tv_pesticide_gauge_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="면역 게이지(살충제)"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/gl_left"
                app:layout_constraintTop_toBottomOf="@id/pb_water_gauge" />

            <ProgressBar
                android:id="@+id/pb_pesticide_gauge"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="207dp"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:progressDrawable="@drawable/bg_progress_bar_pesticide"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_pesticide_gauge_label"
                app:layout_constraintTop_toBottomOf="@id/tv_pesticide_gauge_label"
                tools:progress="70" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- 카드 아래 '소소한 팁' 바 (카드 바깥, 살짝 겹치게) -->
    <LinearLayout
        android:id="@+id/layout_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:background="@drawable/bg_tip_bar"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/card_plant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="소소한 팁? 작은 물 온개 체크 용도 박스로도 사용가능"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/cb_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:buttonTint="@android:color/darker_gray" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
