<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/card_container"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_plant_image"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/tv_plant_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/iv_delete_checkbox"
            app:layout_constraintStart_toEndOf="@id/iv_plant_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ìš°ë¦¬ì§‘ ëª¬ìŠ¤í…Œë¼" />

        <TextView
            android:id="@+id/tv_watering_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/nav_icon"
            app:layout_constraintEnd_toEndOf="@id/tv_plant_nickname"
            app:layout_constraintStart_toStartOf="@id/tv_plant_nickname"
            app:layout_constraintTop_toBottomOf="@id/tv_plant_nickname"
            tools:text="ìµœê·¼ ì„±ìž¥ì¼ì§€ ë‚´ìš©" />

        <RatingBar
            android:id="@+id/ratingBar_health"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@color/card_accent"
            android:stepSize="0.5"
            app:layout_constraintStart_toStartOf="@id/tv_watering_info"
            app:layout_constraintTop_toBottomOf="@id/tv_watering_info" />

        <ImageView
            android:id="@+id/iv_delete_checkbox"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_checkbox_unchecked_custom"
            tools:visibility="visible" />


        <LinearLayout
            android:id="@+id/layout_dairy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="5dp"
            android:background="@drawable/bg_tip_bar"
            app:layout_constraintTop_toBottomOf="@id/ratingBar_health"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
                android:id="@+id/layout_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dairy_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:minHeight="0dp"
                android:paddingVertical="4dp"
                android:paddingHorizontal="4dp"
                android:text="ðŸ—’ï¸ ì‹ë¬¼ ì¼ì§€"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="8dp"
                app:strokeColor="#A3C9A8"
                app:strokeWidth="1dp" />

        </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>