<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_journal"
        android:name="com.Plant_application.ui.journal.JournalFragment"
        android:label="fragment_journal"
        tools:layout="@layout/fragment_journal" >
        <action
            android:id="@+id/action_navigation_journal_to_plantDetailFragment"
            app:destination="@id/plantDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/plantDetailFragment"
        android:name="com.Plant_application.ui.detail.PlantDetailFragment"
        android:label="fragment_plant_detail"
        tools:layout="@layout/fragment_plant_detail">
        <argument
            android:name="plantId"
            app:argType="integer" />
        <action
            android:id="@+id/action_plantDetailFragment_to_editPlantFragment"
            app:destination="@id/editPlantFragment" />
    </fragment>

    <fragment
        android:id="@+id/editPlantFragment"
        android:name="com.Plant_application.ui.edit.EditPlantFragment"
        android:label="fragment_edit_plant"
        tools:layout="@layout/fragment_edit_plant">
        <argument
            android:name="plantId"
            app:argType="integer" />
    </fragment>

</navigation>